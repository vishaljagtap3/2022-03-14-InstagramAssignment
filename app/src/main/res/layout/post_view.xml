<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:textSize="20sp"
        android:text="Vishal Jagtap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/txtAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="12 April 2022"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/txtPostedOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        android:text="This is a sample title of the post to see how it looks, Please ignore..."
        app:layout_constraintTop_toBottomOf="@id/txtAuthor"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="16dp"
        android:src="@drawable/dog"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imgPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtNumberOfLikes"
        android:text="Like"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/imgPost"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/imgPost"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/iconShare"
        android:src="@android:drawable/ic_menu_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>